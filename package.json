{
  "author": "Alex Browne <stephenalexbrowne@gmail.com>",
  "name": "battle-game",
  "version": "0.1.0",
  "license": "MIT or Apache-2.0",
  "scripts": {
    "build:wasm": "wasm-pack build ./battle-game-lib --target web --release -- --features=wasm",
    "watch:wasm": "cd ./battle-game-lib && cargo watch -i .gitignore -i \"pkg/*\" -s \"wasm-pack build --target web --dev -- --features=wasm\"",
    "dev": "vite",
    "build": "npm run build:wasm && vue-tsc --noEmit && vite build",
    "test": "cd ./battle-game-lib && cargo test && wasm-pack test --chrome --headless -- --features=wasm"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.1.2",
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.17",
    "rimraf": "^3.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "vite": "^3.1.7",
    "vite-plugin-wasm-pack": "^0.1.12",
    "vue-tsc": "^1.0.7"
  },
  "dependencies": {
    "browser-fs-access": "^0.31.0",
    "codemirror": "^6.0.1",
    "vue": "^3.2.40",
    "vue-codemirror": "^6.1.1",
    "vue-router": "^4.1.5"
  }
}
