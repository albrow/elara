{
  "author": "Alex Browne <stephenalexbrowne@gmail.com>",
  "name": "elara",
  "version": "0.1.0",
  "license": "MIT or Apache-2.0",
  "home": "https://albrow.github.io/elara/",
  "scripts": {
    "build:wasm": "wasm-pack build ./elara-lib --target web --release -- --features=wasm",
    "watch:wasm": "cd ./elara-lib && cargo watch -i .gitignore -i \"pkg/*\" -s \"wasm-pack build --target web --dev -- --features=wasm\"",
    "test:rust": "cd ./elara-lib && cargo test -- --test-threads=1",
    "test:rust-wasm": "cd ./elara-lib && wasm-pack test --chrome --headless -- --features=wasm",
    "test:js": "vitest run",
    "dev": "vite",
    "build": "npm run build:wasm && tsc --noEmit && vite build",
    "test": "npm run test:rust && npm run test:rust-wasm && npm run test:js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ."
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@types/lodash.chunk": "^4.2.7",
    "@types/lodash.debounce": "^4.0.7",
    "@types/mdx": "^2.0.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/uuid": "^9.0.0",
    "@types/clone": "^2.1.1",
    "@types/pizzicato": "^0.6.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "gh-pages": "^4.0.0",
    "jsdom": "^20.0.3",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.0",
    "typescript": "^4.8.2",
    "vite": "^3.1.7",
    "vite-plugin-wasm-pack": "^0.1.12",
    "vitest": "^0.26.3"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.4.1",
    "@codemirror/lang-javascript": "^6.1.1",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fontsource/nunito": "^4.5.11",
    "@mdx-js/rollup": "^2.1.5",
    "@uiw/codemirror-themes": "^4.13.2",
    "@uiw/react-codemirror": "^4.12.4",
    "browser-fs-access": "^0.31.0",
    "clone": "^2.1.2",
    "codemirror": "^6.0.1",
    "framer-motion": "^7.6.9",
    "lodash.chunk": "^4.2.0",
    "lodash.debounce": "^4.0.8",
    "pizzicato": "^0.6.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.6.0",
    "react-router5": "^8.0.1",
    "react-simple-animate": "^3.5.2",
    "remark-gfm": "^3.0.1",
    "router5-plugin-browser": "^8.0.1",
    "router5-plugin-logger": "^8.0.1",
    "title-case": "^3.0.3",
    "uuid": "^9.0.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "airbnb",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "env": {
      "browser": true
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "unused-imports"
    ],
    "ignorePatterns": [
      "node_modules/",
      "web/dist/",
      "elara-lib/"
    ],
    "rules": {
      "import/default": "error",
      "import/extensions": "off",
      "import/first": "off",
      "import/named": "error",
      "import/no-cycle": "off",
      "import/no-extraneous-dependencies": [
        "off"
      ],
      "import/no-unresolved": "off",
      "import/no-relative-packages": "off",
      "import/order": [
        "warn",
        {
          "newlines-between": "ignore",
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "import/prefer-default-export": "off",
      "react/sort-comp": [
        "warn",
        {
          "order": [
            "type-annotations",
            "static-methods",
            "lifecycle",
            "everything-else",
            "render"
          ]
        }
      ],
      "react/state-in-constructor": "off",
      "react/static-property-placement": [
        "off"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "unused-imports/no-unused-imports": "warn",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".jsx",
            ".tsx"
          ]
        }
      ],
      "react/react-in-jsx-scope": "off",
      "react/require-default-props": "off",
      "react/destructuring-assignment": "off",
      "react-hooks/exhaustive-deps": "error",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_.*",
          "argsIgnorePattern": "^_.*"
        }
      ],
      "no-undef": "off",
      "no-underscore-dangle": "off",
      "jsx-a11y/anchor-is-valid": "off"
    }
  }
}
