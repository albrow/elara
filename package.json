{
  "author": "Alex Browne <stephenalexbrowne@gmail.com>",
  "name": "battle-game",
  "version": "0.1.0",
  "license": "MIT or Apache-2.0",
  "scripts": {
    "build:wasm": "wasm-pack build ./battle-game-lib --target web --release -- --features=wasm",
    "watch:wasm": "cd ./battle-game-lib && cargo watch -i .gitignore -i \"pkg/*\" -s \"wasm-pack build --target web --dev -- --features=wasm\"",
    "dev": "vite",
    "build": "npm run build:wasm && tsc --noEmit && vite build",
    "test": "cd ./battle-game-lib && cargo test && wasm-pack test --chrome --headless -- --features=wasm"
  },
  "devDependencies": {
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.17",
    "rimraf": "^3.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "vite": "^3.1.7",
    "vite-plugin-wasm-pack": "^0.1.12"
  },
  "dependencies": {
    "@uiw/react-codemirror": "^4.12.4",
    "browser-fs-access": "^0.31.0",
    "codemirror": "^6.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.2"
  }
}
